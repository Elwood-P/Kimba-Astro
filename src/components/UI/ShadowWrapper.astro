---
const { borderRadius, className } = Astro.props;
---

<div class=`border border-[#dbdbdb] rounded-[${borderRadius ?? '10px'}] || overflow-hidden || shadow || ${className ? className : ''} `>
  <slot />
</div>

<style>
  .shadow {
    box-shadow: 0px 4px 3px rgba(73, 77, 86, 0.04), 0px 8px 5px rgba(73, 77, 86, 0.03), 0px 19px 50px rgba(73, 77, 86, 0.02);
  }
  .shadow--shallow {
    box-shadow: 0px 3px 1px rgba(73, 77, 86, 0.04), 0px 6px 2px rgba(73, 77, 86, 0.03), 0px 19px 50px rgba(73, 77, 86, 0.02);
  }
</style>
